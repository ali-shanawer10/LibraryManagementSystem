<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="top_center" prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagementsystem.controllers.AddMemberController">
    <!-- Full-width Label at the top -->
    <Label alignment="CENTER" prefHeight="255.0" prefWidth="1600.0" style="-fx-background-color: #6c8495; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Member">
        <font>
            <Font size="40.0" />
        </font>
    </Label>
    <AnchorPane prefHeight="900.0" prefWidth="1600.0">
        <Label layoutX="643.0" layoutY="171.0" text="FIRST NAME">
            <font>
                <Font name="Arial Narrow Bold" size="31.0" />
            </font>
        </Label>
        <Label layoutX="643.0" layoutY="274.0" text="LAST NAME">
            <font>
                <Font name="Arial Narrow Bold" size="31.0" />
            </font>
        </Label>
        <TextField fx:id="firstNameField" layoutX="643.0" layoutY="207.0" prefHeight="50.0" prefWidth="317.0" />
        <TextField fx:id="lastNameField" layoutX="643.0" layoutY="310.0" prefHeight="50.0" prefWidth="317.0" />
        <Label layoutX="643.0" layoutY="378.0" text="EMAIL">
            <font>
                <Font name="Arial Narrow Bold" size="31.0" />
            </font>
        </Label>
        <TextField fx:id="emailField" layoutX="643.0" layoutY="414.0" prefHeight="50.0" prefWidth="317.0" />
        <Label layoutX="641.0" layoutY="472.0" text="ADDRESS">
            <font>
                <Font name="Arial Narrow Bold" size="31.0" />
            </font>
        </Label>
        <TextField fx:id="addressField" layoutX="641.0" layoutY="508.0" prefHeight="50.0" prefWidth="317.0" />
        <Button fx:id="Back" layoutX="790.0" layoutY="567.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="36.0" prefWidth="79.0" text="Back">
            <font>
                <Font name="Arial Narrow Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="Add" layoutX="881.0" layoutY="567.0" mnemonicParsing="false" onAction="#handleAddButton" prefHeight="36.0" prefWidth="79.0" text="Add">
            <font>
                <Font name="Arial Narrow Bold" size="14.0" />
            </font>
        </Button>
    </AnchorPane>
</VBox>
