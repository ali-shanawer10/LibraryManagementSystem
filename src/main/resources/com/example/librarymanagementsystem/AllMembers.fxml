<VBox alignment="top_center" prefHeight="900.0" prefWidth="1600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagementsystem.controllers.AllMembersController">
   <!-- Full-width Label at the top -->
   <Label alignment="CENTER" prefHeight="255.0" prefWidth="1600.0" style="-fx-background-color: #6c8495; -fx-text-fill: white; -fx-font-weight: bold;" text="All Members">
      <font>
         <Font size="40.0" />
      </font>
      <VBox.vgrow>
      </VBox.vgrow>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" left="20.0" top="20.0" />
      </padding>
   </Label>
   <AnchorPane prefHeight="900.0" prefWidth="1600.0">
      <Button fx:id="backbutton" layoutX="1369.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="45.0" prefWidth="145.0" text="BACK" textAlignment="CENTER">
         <font>
            <Font name="Arial Narrow Bold" size="18.0" />
         </font>
      </Button>
      <TableView fx:id="tableview" layoutX="87.0" layoutY="128.0" prefHeight="544.0" prefWidth="1427.0">
         <columns>
            <TableColumn fx:id="fname" prefWidth="311.0" text="FIRST NAME" />
            <TableColumn fx:id="lname" prefWidth="318.0" text="LAST NAME" />
            <TableColumn fx:id="email" minWidth="0.0" prefWidth="467.0" text="EMAIL" />
            <TableColumn fx:id="address" prefWidth="329.0" text="ADDRESS" />
         </columns>
      </TableView>
      <TextField fx:id="searchbar" layoutX="87.0" layoutY="66.0" prefHeight="45.0" prefWidth="1273.0" promptText="Search">
         <font>
            <Font name="Arial Narrow Bold" size="18.0" />
         </font>
      </TextField>
      <ImageView fitHeight="29.0" fitWidth="31.0" layoutX="1313.0" layoutY="74.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@Images/search.png" />
      </ImageView>
   </AnchorPane>
</VBox>
